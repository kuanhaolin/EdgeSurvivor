<script setup>
import { ref, reactive, computed, onMounted } from 'vue'
import { ElMessage, ElMessageBox } from 'element-plus'
import { Plus, Refresh, Right, WarningFilled } from '@element-plus/icons-vue'
import axios from '@/utils/axios'

const props = defineProps({
  activityId: {
    type: Number,
    required: true
  },
  creatorId: {
    type: Number,
    required: false
  }
})

const expenses = ref([])
const summary = ref({
  total_amount: 0,
  participant_count: 0,
  per_person: 0
})
const settlements = ref([])
const showAddDialog = ref(false)
const participantsList = ref([])
const participantsMap = ref(new Map())

const expenseForm = reactive({
  description: '',
  amount: 0,
  category: '',
  expense_date: new Date(),
  payer_id: null,
  split_type: 'all', // 'all', 'selected', 'borrow'
  split_participants: [],
  borrower_id: null
})

const currentUserId = computed(() => {
  const user = JSON.parse(localStorage.getItem('user') || '{}')
  return user.user_id
})

// è¼‰å…¥æ´»å‹•åƒèˆ‡è€…
const loadParticipants = async () => {
  try {
    const response = await axios.get(`/activities/${props.activityId}`)
    const activity = response.data.activity
    participantsList.value = activity.participants || []
    
    // å»ºç«‹åƒèˆ‡è€… Map æ–¹ä¾¿æŸ¥æ‰¾
    participantsMap.value = new Map()
    participantsList.value.forEach(p => {
      participantsMap.value.set(p.user_id, p)
    })
    
    // é è¨­ä»£å¢Šäººç‚ºç•¶å‰ä½¿ç”¨è€…
    if (!expenseForm.payer_id) {
      expenseForm.payer_id = currentUserId.value
    }
  } catch (error) {
    console.error('è¼‰å…¥åƒèˆ‡è€…å¤±æ•—:', error)
  }
}

// è¼‰å…¥è²»ç”¨åˆ—è¡¨
const loadExpenses = async () => {
  try {
    const response = await axios.get(`/activities/${props.activityId}/expenses`)
    expenses.value = response.data.expenses || []
    summary.value = response.data.summary || {
      total_amount: 0,
      participant_count: 0,
      per_person: 0
    }
  } catch (error) {
    console.error('è¼‰å…¥è²»ç”¨å¤±æ•—:', error)
    ElMessage.error('è¼‰å…¥è²»ç”¨å¤±æ•—')
  }
}

// è¼‰å…¥çµç®—
const loadSettlement = async () => {
  try {
    const response = await axios.get(`/activities/${props.activityId}/expenses/settlement`)
    settlements.value = response.data.settlements || []
  } catch (error) {
    console.error('è¼‰å…¥çµç®—å¤±æ•—:', error)
    if (error.response?.status !== 404) {
      ElMessage.error('è¼‰å…¥çµç®—å¤±æ•—')
    }
  }
}

// æ‰“é–‹æ–°å¢å°è©±æ¡†
const openAddDialog = () => {
  // é‡ç½®è¡¨å–®
  expenseForm.description = ''
  expenseForm.amount = 0
  expenseForm.category = ''
  expenseForm.expense_date = new Date()
  expenseForm.payer_id = currentUserId.value
  expenseForm.split_type = 'all'
  expenseForm.split_participants = []
  expenseForm.borrower_id = null
  
  showAddDialog.value = true
}

// è™•ç†åˆ†æ”¤æ–¹å¼è®Šæ›´
const handleSplitTypeChange = (value) => {
  if (value === 'selected') {
    // é è¨­é¸æ“‡æ‰€æœ‰äºº
    expenseForm.split_participants = participantsList.value.map(p => p.user_id)
  } else {
    expenseForm.split_participants = []
  }
  
  if (value === 'borrow') {
    // é è¨­å€Ÿæ¬¾äººç‚ºç•¶å‰ä½¿ç”¨è€…ä»¥å¤–çš„ç¬¬ä¸€å€‹äºº
    const others = participantsList.value.filter(p => p.user_id !== expenseForm.payer_id)
    if (others.length > 0) {
      expenseForm.borrower_id = others[0].user_id
    }
  } else {
    expenseForm.borrower_id = null
  }
}

// è¨ˆç®—æ¯äººåˆ†æ”¤é‡‘é¡
const calculatePerPerson = (amount, count) => {
  if (!amount || !count || count === 0) return 0
  return Math.round(amount / count)
}

// æ–°å¢è²»ç”¨
const addExpense = async () => {
  // é©—è­‰å¿…å¡«æ¬„ä½
  if (!expenseForm.description || !expenseForm.amount || !expenseForm.category || !expenseForm.payer_id) {
    ElMessage.error('è«‹å¡«å¯«æ‰€æœ‰å¿…å¡«æ¬„ä½')
    return
  }
  
  if (expenseForm.split_type === 'selected' && expenseForm.split_participants.length === 0) {
    ElMessage.error('è«‹é¸æ“‡è‡³å°‘ä¸€ä½åƒèˆ‡åˆ†æ”¤çš„äºº')
    return
  }
  
  if (expenseForm.split_type === 'borrow' && !expenseForm.borrower_id) {
    ElMessage.error('è«‹é¸æ“‡å€Ÿæ¬¾äºº')
    return
  }
  
  try {
    const requestData = {
      description: expenseForm.description,
      amount: expenseForm.amount,
      category: expenseForm.category,
      expense_date: expenseForm.expense_date.toISOString().split('T')[0],
      payer_id: expenseForm.payer_id,
      split_type: expenseForm.split_type
    }
    
    // æ ¹æ“šåˆ†æ”¤æ–¹å¼æ·»åŠ é¡å¤–åƒæ•¸
    if (expenseForm.split_type === 'all') {
      requestData.split_participants = participantsList.value.map(p => p.user_id)
    } else if (expenseForm.split_type === 'selected') {
      requestData.split_participants = expenseForm.split_participants
    } else if (expenseForm.split_type === 'borrow') {
      requestData.borrower_id = expenseForm.borrower_id
      requestData.split_participants = [] // å€Ÿæ¬¾ä¸åˆ†æ”¤
    }
    
    await axios.post(`/activities/${props.activityId}/expenses`, requestData)
    
    ElMessage.success('è²»ç”¨å·²æ–°å¢')
    showAddDialog.value = false
    
    // é‡æ–°è¼‰å…¥
    await loadExpenses()
    await loadSettlement()
  } catch (error) {
    console.error('æ–°å¢è²»ç”¨å¤±æ•—:', error)
    ElMessage.error(error.response?.data?.error || 'æ–°å¢è²»ç”¨å¤±æ•—')
  }
} {
    await axios.post(`/activities/${props.activityId}/expenses`, {
      description: expenseForm.description,
      amount: expenseForm.amount,
      category: expenseForm.category,
      expense_date: expenseForm.expense_date,
      is_split: expenseForm.is_split,
      split_method: expenseForm.split_method
    })
    
    ElMessage.success('è²»ç”¨å·²æ–°å¢')
    showAddDialog.value = false
    
    // é‡ç½®è¡¨å–®
    expenseForm.description = ''
    expenseForm.amount = 0
    expenseForm.category = ''
    expenseForm.expense_date = new Date()
    expenseForm.is_split = true
    
    // é‡æ–°è¼‰å…¥
    await loadExpenses()
    await loadSettlement()
  } catch (error) {
    console.error('æ–°å¢è²»ç”¨å¤±æ•—:', error)
    ElMessage.error(error.response?.data?.error || 'æ–°å¢è²»ç”¨å¤±æ•—')
  }
}

// åˆªé™¤è²»ç”¨
const deleteExpense = async (expenseId) => {
  try {
    await ElMessageBox.confirm('ç¢ºå®šè¦åˆªé™¤é€™ç­†è²»ç”¨å—ï¼Ÿ', 'ç¢ºèª', {
      confirmButtonText: 'ç¢ºå®š',
      cancelButtonText: 'å–æ¶ˆ',
      type: 'warning'
    })
    
    await axios.delete(`/expenses/${expenseId}`)
    ElMessage.success('è²»ç”¨å·²åˆªé™¤')
    
    await loadExpenses()
    await loadSettlement()
  } catch (error) {
    if (error !== 'cancel') {
      console.error('åˆªé™¤è²»ç”¨å¤±æ•—:', error)
      ElMessage.error(error.response?.data?.error || 'åˆªé™¤è²»ç”¨å¤±æ•—')
    }
  }
}

// åˆ¤æ–·æ˜¯å¦å¯ä»¥åˆªé™¤
const canDelete = (expense) => {
  return expense.payer_id === currentUserId.value || currentUserId.value === props.creatorId
}

// æ ¼å¼åŒ–æ—¥æœŸ
const formatDate = (dateString) => {
  if (!dateString) return '-'
  return new Date(dateString).toLocaleDateString('zh-TW')
}

// ç²å–é¡åˆ¥æ¨™ç±¤é¡å‹
const getCategoryType = (category) => {
  const types = {
    transport: 'primary',
    accommodation: 'success',
    food: 'warning',
    ticket: 'danger',
    other: 'info'
  }
  return types[category] || 'info'
}

// ç²å–é¡åˆ¥æ–‡å­—
const getCategoryText = (category) => {
  const texts = {
    transport: 'äº¤é€š',
    accommodation: 'ä½å®¿',
    food: 'é¤é£²',
    ticket: 'é–€ç¥¨',
    other: 'å…¶ä»–'
  }
  return texts[category] || category
}

// çµ„ä»¶æ›è¼‰æ™‚è¼‰å…¥æ•¸æ“š
onMounted(() => {
  loadExpenses()
  loadSettlement()
})
</script>

